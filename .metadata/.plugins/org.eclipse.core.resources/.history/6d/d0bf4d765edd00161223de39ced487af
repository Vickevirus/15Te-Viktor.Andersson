import java.util.ArrayList;
import java.util.Random;

public class Anagram {

public static void main(String[] args) {

// Skriv ut lite text och be användaren skriva in en sträng.
	Random rand = new Random();
	String str = new String();
	int  n = rand.nextInt(7) + 0;


str = "abcdergh";
// Här skapar vi en lista av strängen. Detta är för att kunna slumpvis välja fram ett tecken.
ArrayList<Character> chars = new ArrayList<Character>();
for (char c : str.toCharArray()) {
chars.add(c);
}

for (int x=0;x< chars.size();x++)
System.out.println(x+": "+chars.get(x));

String newString = new String();
for (int x=0;x<chars.size();x++){
newString += Character.toString(chars.get(x));
}
}
}